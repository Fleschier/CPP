{  
    "version": "0.1.0",  
    "showOutput": "always",  
    "tasks": [
        {
            "taskName": "build",
            "command": "g++",
            "isShellCommand": true,
            "showOutput": "always",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceRoot}/${fileBasenameNoExtension}.o"
            ],
            "problemMatcher": [
                "$g++"
            ]
        }
    ]  
}